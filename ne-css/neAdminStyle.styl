
// Setup rupture
@import 'rupture'

// Set the Breakpoints
bp = 960px

// Set the Colors
color = #535d65

// Set the fonts later use // font-family font1
font1 = 'arial','helvetica', sans-serif


// Materialize CSS z-depth

zb0()
  box-shadow:  none !important

zb1()
  box-shadow:  0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)

zb2()
  box-shadow:  0 5px 11px 0 rgba(0, 0, 0, 0.18), 0 4px 15px 0 rgba(0, 0, 0, 0.15)

zb3()
  box-shadow:  0 8px 17px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19)

zb4()
  box-shadow:  0 12px 15px 0 rgba(0, 0, 0, 0.24), 0 17px 50px 0 rgba(0, 0, 0, 0.19)

zb5()
  box-shadow:  0 16px 28px 0 rgba(0, 0, 0, 0.22), 0 25px 55px 0 rgba(0, 0, 0, 0.21)

zb6()
  box-shadow:  0 27px 24px 0 rgba(0, 0, 0, 0.2), 0 40px 77px 0 rgba(0, 0, 0, 0.22)

// Materialize CSS z-depth



// The global styles

input
  border inset
  border-color #535d65
  color grey

input:focus
  border inset
  border-color orange
  color black

button
  border:none

submit
  border:none


html {
  font-size: 1em
  color: #535d65
  font-family: font1
  word-wrap: break-word
}
body {
  background: #eae6e6
  padding: 0
  margin: 0
  display: block
}
a {
  color: #00b7ff;
}
a:hover {
  color: #800080;
}
h1 {
  margin: 0;
  padding: 0;
}


.ne-responsive-img
  max-width 100%
  height auto

// Buttons

.ne-admin-btn
  border-style groove
  border-color inherit
  border-width 1px
  border-radius 5px
  zb1()

.ne-admin-btn:hover
  transition: box-shadow 0.25s;
  zb4()

.ne-admin-item-field-edit-button
  width 80%
  font-size 0.8em
  height 30px

.ne-admin-item-field-edit-button:hover
  background yellow

.ne-admin-item-delete-button
  background #2c2c2c
  width 90%
  height 50px
  color white

.ne-admin-item-delete-button:hover
  transition background 0.5s;
  background red

.ne-admin-item-add
  input
    width 80%

  zb1()
  background green
  color white
  margin 20px
  padding 20px
  text-align center
  border-radius 5px

.ne-admin-item-add:hover
  transition background 1s, box-shadow 0.3s;
  background grey
  zb5()

.ne-admin-item-add-btn
  margin-top 20px
  background #2c2c2c
  width 90%
  height 50px
  color white

.ne-admin-item-add-btn:hover
  transition background 0.5s, color 0.5s;
  background green
  color black

.pagebutton
  margin-top 30px
  width 100%
  height 50px

.ne-admin-cycle-form-top
  margin-bottom 30px

.ne-admin-cycle-form-bottom
  margin-top 30px



.ne-admin-item-edit
  input
    width 80%
  zb1()
  background grey
  color black
  text-align center
  border-radius 5px

.ne-admin-item-edit:hover
  transition background 0.25s, box-shadow 0.25s, color 0.25s;
  background green
  zb4()
  color #707070

.ne-admin-item-field-edit-form
  width 100%
  margin-top 10px
  margin-bottom 10px
  padding-top 10px
  padding-bottom 10px

.ne-admin-item-field-edit-form:hover
  transition: background 0.5s;
  background black
  zb1()

.ne-admin-nav-top
  margin-top 1%

.ne-admin-nav-top ul
  list-style: none;
  background-color: #444;
  text-align: center;
  padding: 0;
  margin: 0;

.ne-admin-nav-top li
  font-family: 'Oswald', sans-serif;
  font-size: 1em;
  border-bottom: 1px solid #888;
  +above(500px)
    //width: 120px;
    border-bottom: none;
    font-size: 1em;
    display: inline-block;

.ne-admin-nav-top a
  background #000
  margin-left 5px
  margin-right 5px
  border-style solid
  border-color inherit
  border-width 1px
  border-radius 5px
  text-decoration: none;
  color #fff
  display: block;
  transition: .3s background-color;
  zb1()
  +above(500px)
    padding-left: 5px
    padding-right: 5px

.ne-admin-nav-top a:hover
  background-color: green;
  zb4()

.ne-admin-nav-top a:active
  background-color: #fff;
  color: #444;
  cursor: default;

.ne-admin-nav-top-profile
  lost-column: 1/1 0 0px
  font-family: 'Oswald', sans-serif;
  font-size: 0.8em;
  border-bottom: 1px solid #888;
  a
    line-height: 50px;
    background grey
    margin-top 0
    margin-bottom 0
    margin-left 0
    margin-right 0
    border-style none
    border-width 0
    border-radius 5px
    color #fff
    zb1()
  +above(500px)
    lost-column: 1/5 0 0px
    border-bottom: none;
    display: inline-block;


.ne-admin-nav-top-links
  lost-column 1/1 0 0px
  background red
  margin-top 5px
  margin-bottom 5px
  +above(500px)
    lost-column: 3/5 0 0px

.ne-admin-nav-top-link
  margin-top 10px
  margin-bottom 10px
  line-height: 20px;
  height: 20px;

.ne-admin-link-box
  margin-top 40px
  background grey
  text-align center
  border-radius 5px
  zb1()

.ne-admin-link-box:hover
  zb4()
  background green

.ne-admin-link-box a
  display block
  text-decoration none
  height 100px
  width 100%
  color black
  padding-top 67px

.ne-admin-message
  background yellow
  color black
  border-radius 5px
  zb1()



.pagebutton:hover
  background black





